#!/usr/bin/env ruby

require 'rubygems'
require 'getopt/std'
require 'yaml'
require 'zabbixapi'

opt = Getopt::Std.getopts("g:i:E:")

group_name = opt["g"]
zabbix_env = opt["E"]

template_name = "TMPL_playout-t"
app_name = "Playout-T"

# read config
config = YAML::load(open('./config.yml'))

api_url = config[zabbix_env]["api_url"]
api_login = config[zabbix_env]["api_login"]
api_password = config[zabbix_env]["api_password"]

# Esablish new connection
zbx = Zabbix::ZabbixApi.new(api_url, api_login, api_password)

# Create new template
p " * Creating template #{template_name}."
g_id = zbx.add_or_get_group(group_name)

options = {
  'groups' => [ g_id.to_i ],
  'host' => template_name
}

t_id = zbx.add_or_get_template(options)

# Create application #{app_name}
p " ** Create application #{app_name}."
application = {
  'hostid' => t_id.to_i,
  'name' => app_name
}
a_id = zbx.add_or_get_application(t_id, application)

# 'playout-t service status'
options = {
  'description' => "playout-t service status",
  'key_' => "runit_service[playout-t]",
  'hostid' => t_id.to_i,
  'applications' => [ a_id.to_i ],
  'history' => 7,
  'trends' => 30,
  'delay' => 60,
  'value_type' => 0
}
p " ** Add 'playout-t service status' to #{template_name}."
item_id = zbx.add_or_get_item(t_id, options)

# 'playout-t clients count'
options = {
  'description' => "playout-t clients count",
  'key_' => "playout-t.clients[http://127.0.0.1:9999/ele-api/list]",
  'hostid' => t_id.to_i,
  'applications' => [ a_id.to_i ],
  'history' => 7,
  'trends' => 30,
  'delay' => 60,
  'value_type' => 0
}
p " ** Add 'playout-t clients count' to #{template_name}."
item_id = zbx.add_or_get_item(t_id, options)

# TRIGGERS
options = {
  'description' => "playout-t service status",
  'expression' => "{#{template_name}:runit_service[playout-t].last(0)}#0",
  'priority' => 5, # disaster
  'templateid' => 0,
  'comments' => "playout-t service status (disaster)",
  'type' => 0,
  'status' => '0'
}

p " ** Add 'playout-t service status' trigger"
tr_id = zbx.add_or_get_trigger(t_id, options)

options = {
  'description' => "playout-t clients count",
  'expression' => "{#{template_name}:playout-t.clients[http://127.0.0.1:9999/ele-api/list].last(0)}<0",
  'priority' => 5, # disaster
  'templateid' => 0,
  'comments' => "playout-t clients count (disaster)",
  'type' => 0,
  'status' => '0'
}

p " ** Add 'playout-t clients count' trigger"
tr_id = zbx.add_or_get_trigger(t_id, options)

options = {
  'description' => "playout-t clients count overload",
  'expression' => "{#{template_name}:playout-t.clients[http://127.0.0.1:9999/ele-api/list].last(0)}>750",
  'priority' => 5, # disaster
  'templateid' => 0,
  'comments' => "playout-t clients count overload (disaster)",
  'type' => 0,
  'status' => '0'
}

p " ** Add 'playout-t clients count overload' trigger"
tr_id = zbx.add_or_get_trigger(t_id, options)
